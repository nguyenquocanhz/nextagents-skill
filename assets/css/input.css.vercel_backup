  transition:
    opacity 0.2s ease-in-out,
    visibility 0.2s ease-in-out;
}

.modal.hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}

.modal:not(.hidden) {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

